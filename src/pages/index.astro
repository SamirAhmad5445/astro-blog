---
// layouts import
import Layout from "../layouts/Layout.astro";

// components import
import Link from "../components/Link.astro";
import PostCard from "../components/PostCard.astro";

// utilities
import { formatePosts } from "../js/utils";

const allPosts = await Astro.glob("./blog/*.md");

const filteredPosts = formatePosts(allPosts, {
  filterOutDraft: true,
  filterOutFuturePosts: true,
  sortByDate: true,
  limit: 3,
});
---

<Layout title="Home">
  <section class="container about" aria-label="about me">
    <img src="/images/headshot.jpg" alt="my Headshot" class="img" />

    <div class="content">
      <h1 class="h1">Welcome to My Astro Blog</h1>
      <p>
        Lorem ipsum, dolor sit amet consectetur adipisicing elit. Et eius
        laborum illum quia nisi eaque voluptate nesciunt maxime! Aliquam,
        dolorum!
      </p>
      <Link
        href="/about"
        type="secondary"
        bordered={true}
        icon={{ name: "tabler:mood-happy", pos: "after" }}
      >
        about me
      </Link>
    </div>
  </section>

  <section class="container" aria-label="New Blog Posts">
    <h1 class="h1">New Blog Posts</h1>
    <div class="post-container">
      {
        filteredPosts.map((post) => (
          <PostCard post={post.frontmatter} href={post.url} />
        ))
      }
    </div>
    <div style="margin-inline: auto; max-width: fit-content;">
      <Link
        href="/blog"
        type="secondary"
        bordered={true}
        icon={{ name: "tabler:book", pos: "after" }}
      >
        More Posts
      </Link>
    </div>
  </section>

  <style>
    .img {
      width: 200px;
      aspect-ratio: 2 / 3;
      @media (min-width: 768px) {
        width: 265px;
        aspect-ratio: 2 / 3;
      }
    }
  </style>
</Layout>
