---
// libraries
import { Image } from "@astrojs/image/components";

// utilties
import { slugify, formatDate } from "../js/utils";

// imporetd components
import Link from "./Link.astro";

const { post, href } = Astro.props;

const { category, title, author, date, image } = post;
---

<article class="card">
  <small>
    <a href={`/category/${slugify(category)}/`} class="badge">{category}</a>
  </small>
  <a href={href} tabindex="-1" aria-hidden="true">
    <Image
      src={image.src}
      alt={image.alt}
      width={400}
      height={250}
      format="avif"
      fit="cover"
      quality={80}
      aspectRatio="4:1"
    />
  </a>
  <div class="content">
    <h2 class="h4"><a href={href} tabindex="-1">{title}</a></h2>
    <p>
      by <a href={`/author/${slugify(author)}/`}>{author}</a> â€¢ {
        formatDate(date)
      }
    </p>
    <Link href={href} type="secondary">Read Post</Link>
  </div>
</article>
