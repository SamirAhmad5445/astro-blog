---
// libraries
import { Image } from "@astrojs/image/components";

// utilties
import { slugify, formatDate } from "../js/utils";

const { post, href, tagType = "h3" } = Astro.props;

const { category, title, author, date, image } = post;

const Tag = tagType;
---

<article class="card">
  <small>
    <a href={`/category/${slugify(category)}/`} class="badge">{category}</a>
  </small>
  <a href={href} tabindex="-1" aria-hidden="true">
    <Image
      src={image.src}
      alt={image.alt}
      width={400}
      height={250}
      format="webp"
      fit="cover"
      quality={80}
      aspectRatio="4:1"
    />
  </a>
  <div class="content">
    <Tag class="h2"><a href={href}>{title}</a></Tag>
    <p>
      by <a href={`/author/${slugify(author)}/`}>{author}</a> â€¢ {
        formatDate(date)
      }
    </p>
  </div>
</article>
